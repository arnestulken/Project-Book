<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/row_cover"
        android:layout_width="65dp"
        android:layout_height="86dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#e7e7e7"/>

    <TextView
        android:id="@+id/row_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ExampleBookTitle"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginLeft="73dp"
        android:layout_marginStart="73dp"
        android:layout_alignTop="@+id/row_cover"
        android:layout_alignLeft="@+id/row_cover"
        android:layout_alignStart="@+id/row_cover" />

    <TextView
        android:id="@+id/row_author"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:text="ExampleBookAuthor"
        android:textSize="16sp"
        android:maxLines="2"
        android:layout_below="@+id/row_title"
        android:layout_alignLeft="@+id/row_title"
        android:layout_alignStart="@+id/row_title" />
</RelativeLayout>